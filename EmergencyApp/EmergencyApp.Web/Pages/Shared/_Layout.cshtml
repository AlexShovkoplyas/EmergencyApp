<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EmergencyApp</title>
    <link rel="stylesheet" href="~/app.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EmergencyApp.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <nav class="identity-top-nav">
        <div class="identity-nav-content">
            <a href="/" class="identity-nav-brand">EmergencyApp</a>
            <partial name="_LoginPartial" />
        </div>
    </nav>

    <div class="identity-page-body">
        @RenderBody()
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
    .identity-top-nav {
        background-color: rgba(255,255,255,0.7);
        backdrop-filter: blur(8px);
        border-bottom: 1px solid rgba(0,0,0,0.08);
        position: sticky;
        top: 2px;
        z-index: 100;
    }

    .identity-nav-content {
        max-width: 1024px;
        margin: auto;
        padding: 0.5rem 1.5rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .identity-nav-brand {
        font-weight: 700;
        font-size: 1rem;
        color: #374151;
        text-decoration: none;
    }

    .identity-page-body {
        max-width: 480px;
        margin: 4rem auto;
        padding: 0 1.5rem;
    }

    /* Restyle Identity UI form elements to match app */
    .identity-page-body h1,
    .identity-page-body h2 {
        font-size: 1.75rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
    }

    .identity-page-body .form-group,
    .identity-page-body div[class*="mb-"] {
        margin-bottom: 1rem;
    }

    .identity-page-body label {
        display: block;
        font-size: 0.875rem;
        font-weight: 500;
        color: #374151;
        margin-bottom: 0.25rem;
    }

    .identity-page-body input[type="email"],
    .identity-page-body input[type="password"],
    .identity-page-body input[type="text"] {
        width: 100%;
        padding: 0.5rem 0.75rem;
        border: 1px solid #D1D5DB;
        border-radius: 0.375rem;
        font-size: 0.875rem;
        outline: none;
        box-sizing: border-box;
        background: white;
    }

    .identity-page-body input:focus {
        border-color: #3a4ed5;
        box-shadow: 0 0 0 2px rgba(58,78,213,0.15);
    }

    .identity-page-body button[type="submit"],
    .identity-page-body input[type="submit"] {
        width: 100%;
        padding: 0.5rem 1rem;
        background-color: #3a4ed5;
        color: white;
        border: none;
        border-radius: 0.375rem;
        font-size: 0.875rem;
        font-weight: 600;
        cursor: pointer;
        margin-top: 0.5rem;
    }

    .identity-page-body button[type="submit"]:hover {
        background-color: #2f3fb5;
    }

    .identity-page-body a {
        color: #3a4ed5;
    }

    .identity-page-body .text-danger {
        color: #DC2626;
        font-size: 0.75rem;
        margin-top: 0.25rem;
    }

    .identity-page-body .validation-summary-errors ul {
        padding-left: 1rem;
        color: #DC2626;
        font-size: 0.875rem;
    }

    .identity-page-body hr {
        border-color: #E5E7EB;
        margin: 1.5rem 0;
    }

    /* External login buttons */
    .identity-page-body .btn-primary {
        display: inline-block;
        padding: 0.4rem 1rem;
        background-color: #3a4ed5;
        color: white;
        border: none;
        border-radius: 0.375rem;
        font-size: 0.875rem;
        font-weight: 600;
        cursor: pointer;
        text-decoration: none;
    }

    .identity-page-body .navbar-nav {
        display: none; /* hide _LoginPartial inside the form body */
    }
</style>
